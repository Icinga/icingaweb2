            $titleTime = sprintf(
                $this->translate('in %s', 'timeline.link.title.month.and.year'),
                $timeInfo[0]->end->format('F Y')
            );
            break;
        case '1y':
            $titleTime = sprintf(
                $this->translate('in %s', 'timeline.link.title.year'),
                $timeInfo[0]->end->format('Y')
            );
            break;
