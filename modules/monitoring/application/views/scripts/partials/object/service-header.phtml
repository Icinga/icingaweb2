/** @var \Icinga\Module\Monitoring\Object\MonitoredObject $object */
?>
<table class="state-table service-detail-state">
    <tr>
        <td class="state-col state-<?= Host::getStateText($object->host_state) ?><?= $object->host_handled ? ' handled' : '' ?>">
