<?xml version="1.0"?>
<psalm
    errorLevel="5"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    hideAllErrorsExceptPassedFiles="true"
    hideExternalErrors="true"
>
    <projectFiles>
        <ignoreFiles>
<!--            <directory name="library/vendor/" />-->
<!--            <directory name="application/views/helpers" />-->
            <file name="library/Icinga/Application/functions.php" />
        </ignoreFiles>
        <directory name="application" />
    </projectFiles>
    <extraFiles>
        <directory name="library" />
        <directory name="application/views/helpers" />
        <directory name="vendor" />
        <file name="library/Icinga/Application/functions.php" />
    </extraFiles>
    <issueHandlers>
        <UndefinedFunction>
            <errorLevel type="suppress">
                <referencedFunction name="t" />
            </errorLevel>
        </UndefinedFunction>
    </issueHandlers>
</psalm>
